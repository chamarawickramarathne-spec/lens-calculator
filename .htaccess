# Lens Calculator - Apache Configuration

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /lens-calculator/
    
    # Redirect to index.html if accessing directory
    DirectoryIndex index.html
</IfModule>

# Security Settings
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Content Type Options
    Header always set X-Content-Type-Options "nosniff"
</IfModule>

# PHP Settings
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 60
    php_value max_input_time 60
</IfModule>

# MIME Types
<IfModule mod_mime.c>
    AddType application/json .json
    AddType text/css .css
    AddType text/javascript .js
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
</IfModule>

# Error Pages (Optional - create these files if needed)
# ErrorDocument 404 /lens-calculator/404.html
# ErrorDocument 403 /lens-calculator/403.html
# ErrorDocument 500 /lens-calculator/500.html

# Protect sensitive files
<FilesMatch "^(config\.php|\.htaccess|\.git)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Allow access to API files
<FilesMatch "\.(php)$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
</FilesMatch>
